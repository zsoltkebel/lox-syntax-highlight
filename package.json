{
  "name": "lox-syntax-highlight",
  "displayName": "Lox Syntax Highlight",
  "description": "Syntax highlighting for Lox.",
  "icon": "assets/icon.png",
  "publisher": "zsoltkebel",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "lox",
      "icon": {
        "light": "./assets/lox.svg",
        "dark": "./assets/lox.svg"
      },
      "aliases": ["Lox", "lox"],
      "extensions": [".lox"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "lox",
      "scopeName": "source.lox",
      "path": "./syntaxes/lox.tmLanguage.json"
    }]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zsoltkebel/lox-syntax-highlight"
  }
}
